<body>
  <div class="container">
    <h1>ðŸ”® Tarot Reader</h1>
    <p>Click the button to draw a card</p>

    <button onclick="drawCard()">Draw a Card</button>

    <div id="card" class="card">
      <h2 id="cardName"></h2>
      <p id="cardMeaning"></p>
    </div>
  </div>

  <script>
    const tarotCards = [
      { name: "The Fool", meaning: "New beginnings, adventure, and curiosity." },
      { name: "The Magician", meaning: "Confidence, creativity, and power." },
      { name: "The High Priestess", meaning: "Intuition and inner wisdom." },
      { name: "The Empress", meaning: "Growth, care, and abundance." },
      { name: "The Emperor", meaning: "Structure, stability, and leadership." },
      { name: "The Lovers", meaning: "Relationships and meaningful choices." },
      { name: "The Star", meaning: "Hope, healing, and renewal." }
    ];

    function drawCard() {
      const randomIndex = Math.floor(Math.random() * tarotCards.length);
      const card = tarotCards[randomIndex];

      document.getElementById("cardName").textContent = card.name;
      document.getElementById("cardMeaning").textContent = card.meaning;
      document.getElementById("card").style.display = "block";
    }
  </script>
